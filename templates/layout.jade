!!! 5
html(lang='en')
	head
		meta(charset='utf-8')
		title
			block title
				= locals.title
		block head
			meta(name='viewport', content='width=device-width')
			link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
			link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Noto+Sans:400,700|Yanone+Kaffeesatz', type='text/css')
			link(rel='stylesheet', href='/css/normalize.css')
			link(rel='stylesheet', href='/css/foundation.min.css') 
			link(rel='stylesheet', href='/css/app.css') 
			link(rel='stylesheet', href='http://yandex.st/highlightjs/7.3/styles/tomorrow-night-eighties.min.css')
			script(src='http://yandex.st/highlightjs/7.3/highlight.min.js')
			script(src='/js/vendor/custom.modernizr.js')
			script(src='/js/vendor/jquery.js')
			script(src='/js/foundation.min.js')
			script
				$(function(){
					$(document).foundation();
				})


	body
		block header
			.row
				nav.top-bar
					ul.title-area
						// Title Area 
						li.name test
						// Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone 
						li.toggle-topbar.menu-icon
							a(href='#')
								span Menu
					section.top-bar-section
						// Right Nav Section 
						ul.right#top-bar-buttons
							each item in locals.nav
								li.divider.hide-for-small
								li
									a(href=item.url)
										span.pikto= item.pikto 
										span= item.name
			.row
				a#large-logo.large-12.columns.hide-for-small(href=locals.url)
				a#small-logo.large-12.columns.hide-for-medium-up(href=locals.url)

					

		block content
			.row
				h2 Greetings, Professor Falken. Would you like to play a game?

		block footer
			.row
				.large-12.columns
					hr
					.row
						.large-6.columns
							p.right
								a(href="/feed.xml")
									span.pikto ^
									span.txt RSS Feed
							p &copy; #{ new Date().getFullYear() }
								a(href="/about/")  #{ locals.owner }

						.large-6.columns
							ul.small-block-grid-3.right
								each item in locals.nav
									li
										a(href=item.url)
											span.pikto= item.pikto 
											span= item.name



