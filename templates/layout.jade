!!! 5
html(lang='en')
	head
		meta(charset='utf-8')
		title
			block title
				= locals.name
		block head
			meta(name='viewport', content='width=device-width')
			link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
			link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Noto+Sans:400,700|Anonymous+Pro|Yanone+Kaffeesatz', type='text/css')
			link(rel='stylesheet', href='/css/normalize.css')
			link(rel='stylesheet', href='/css/foundation.min.css') 
			link(rel='stylesheet', href='/css/app.css')
			link(rel='stylesheet', href='/css/iconic_stroke.css')  
			// favicons, thanks to iconifier.net
			link(rel='apple-touch-icon', sizes='144x144', href='/apple-touch-icon-144x144.png')
			link(rel='apple-touch-icon', sizes='114x114', href='/apple-touch-icon-114x114.png')
			link(rel='apple-touch-icon', sizes='72x72', href='/apple-touch-icon-72x72.png')
			link(rel='apple-touch-icon', sizes='57x57', href='/apple-touch-icon-57x57.png')
			link(rel='apple-touch-icon', href='/apple-touch-icon.png')
			script(src='/js/vendor/custom.modernizr.js')
			script(src='http://code.jquery.com/jquery-1.10.0.min.js')
			script(src='/js/foundation.min.js')
			script.
				$(function(){
					$(document).foundation();
				})
	body
		block header
			.row
				nav.top-bar
					ul.title-area
						// Title Area 
						li.name
						li.toggle-topbar.menu-icon
							a(href='#')
								span Menu
					section.top-bar-section
						// Right Nav Section 
						ul.right#top-bar-buttons
							each item in locals.nav
								li.divider.hide-for-small
								li
									a(href=item.url)
										span.iconic(class=item.icon)
										span= item.name
			.row
				a#large-logo.large-12.columns.hide-for-small(href=locals.url)
				a#small-logo.large-12.columns.hide-for-medium-up(href=locals.url)

		block content

		block footer
			.row
				.large-12.columns
					hr
					.row
						.large-6.columns
							p.right
								a(href="/feed.xml")
									span.iconic.rss_alt
									span.txt RSS Feed
							p &copy; #{ new Date().getFullYear() }
								a(href="/about/")  #{ locals.owner }

						.large-6.columns
							ul.small-block-grid-3.right
								each item in locals.nav
									li
										a(href=item.url)
											span.iconic(class=item.icon)
											span= item.name



